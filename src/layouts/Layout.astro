---
interface Props {
	title: string;
}

const { title } = Astro.props;

import { ViewTransitions, fade } from 'astro:transitions';
---

<!doctype html>
<html lang="es" transition:animate={fade({ duration: '0.6s' })}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/assets/images/logo.webp">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<script src="/assets/libs/scroll-parallax.js" defer></script>
		<script src="/assets/libs/mouse-parallax.js" defer></script>

		<ViewTransitions />
	</head>
	<body class="text-neutral-800 w-full h-screen">
		<slot />
	</body>
</html>
<style is:global>	
	*, html, body {
		scroll-behavior: smooth !important;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		position: relative;
		min-width: 0;
	}

	body {
		min-height: 100dvh;
	}

	h1, h2, h3, h4 {
		text-wrap: balance;
	}

	p {
		text-wrap: pretty;
	}

	@font-face {
		font-family: "Sceageus";
		src: url("/assets/fonts/Sceageus.otf") format("opentype");
	}

	.font-sceageus {
		font-family: "Sceageus", sans-serif;
	}

	.drop-shadow-outline-white {
		filter: drop-shadow(0.75px 0.75px 0 #fff) drop-shadow(-0.25px -0.25px 0 #fff) drop-shadow(-0.25px 0.75px 0 #fff) drop-shadow(0.75px -0.25px 0 #fff);
	}